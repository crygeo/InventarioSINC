<UserControl x:Class="Utilidades.Dialogs.TestDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convert="clr-namespace:Utilidades.Converters"
             xmlns:local="clr-namespace:Utilidades.Dialogs"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="15"
             MaxWidth="400"
             Width="Auto"
             MinHeight="100">
    <UserControl.Resources>
        <convert:ArrayToEnumerableConverter x:Key="ArrayToEnumerableConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TreeView ItemsSource="{Binding Message, RelativeSource={RelativeSource AncestorType=local:TestDialog}}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate
                        ItemsSource="{Binding Value, Converter={StaticResource ArrayToEnumerableConverter}}">
                        <TextBlock Text="{Binding Key}" />
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>


        </ScrollViewer>
        <Button Grid.Row="1"
                Margin="0,10"
                Content="Ok"
                Height="30"
                Width="80"
                Command="{x:Static md:DialogHost.CloseDialogCommand}" />
    </Grid>
</UserControl>