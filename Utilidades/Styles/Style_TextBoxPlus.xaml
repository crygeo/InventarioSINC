<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:Controls="clr-namespace:Utilidades.Controls">

    <!--Style 1-->
    <SolidColorBrush x:Key="TextBoxPlus_Background">#5555DB83</SolidColorBrush>
    <SolidColorBrush x:Key="TextBoxPlus_BorderColor">#55DB83</SolidColorBrush>
    <SolidColorBrush x:Key="TextBoxPlus_FocusedBorderColor">#DC7456</SolidColorBrush>
    <SolidColorBrush x:Key="TextBoxPlus_PlaceholderForeground">#FFF</SolidColorBrush>

    <Color x:Key="CTextBoxPlus_BorderColor">#6ED9A1</Color>
    <Color x:Key="CTextBoxPlus_FocusedBorderColor">#DC7456</Color>
    <Color x:Key="CTextBoxPlus_PlaceholderForeground">#FFF</Color>
    <Color x:Key="CTextBoxPlus_FocusedPlaceholderForeground">#FFF</Color>

    <Style x:Key="TextBoxPlusStyle1" TargetType="{x:Type Controls:TextBoxPlus}">
        <Setter Property="MinWidth" Value="150" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Consolas" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="PlaceholderForeground" Value="{StaticResource TextBoxPlus_PlaceholderForeground}" />
        <Setter Property="PlaceholderFontSize" Value="14" />
        <Setter Property="PlaceholderFontWeight" Value="Bold" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:TextBoxPlus}">
                    <Border x:Name="BorderControl"
                            CornerRadius="5"
                            Background="{StaticResource TextBoxPlus_Background}"
                            BorderBrush="{StaticResource TextBoxPlus_BorderColor}"
                            BorderThickness="2"
                            Padding="5,0,0,0">
                        <Grid>

                            <TextBlock Name="PlaceholderText"
                                       Foreground="{TemplateBinding PlaceholderForeground}" Background="{x:Null}"
                                       FontFamily="Consolas"
                                       Text="{Binding Placeholder, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       FontSize="{Binding PlaceholderFontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       FontWeight="{Binding PlaceholderFontWeight, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       Padding="2,0,10,0"
                                       IsHitTestVisible="False"
                                       Visibility="{Binding PlaceholderVisible, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       VerticalAlignment="{Binding PlaceholderVerticalAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                       HorizontalAlignment="{Binding PlaceholderHorizontalAlignment, RelativeSource={RelativeSource AncestorType=UserControl}}" />

                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Cuando IsFocusedBox es True, animamos el color del borde -->
                        <Trigger Property="IsFocusedBox" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl"
                                                        Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="{StaticResource CTextBoxPlus_FocusedBorderColor}"
                                                        Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl"
                                                        Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="{StaticResource CTextBoxPlus_BorderColor}"
                                                        Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>


                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!--Style 2-->
    <SolidColorBrush x:Key="Style2_Background">#29363F</SolidColorBrush>
    <SolidColorBrush x:Key="Style2_BorderColor">#6ED9A1</SolidColorBrush>
    <SolidColorBrush x:Key="Style2_FocusedBorderColor">#DC8789</SolidColorBrush>
    <SolidColorBrush x:Key="Style2_PlaceholderForeground">#ADB0B2</SolidColorBrush>
    <Color x:Key="C_Style2_BorderColor">#6ED9A1</Color>
    <Color x:Key="C_Style2_FocusedBorderColor">#DC8789</Color>
    <Color x:Key="C_Style2_PlaceholderForeground">#ADB0B2</Color>
    <Color x:Key="C_Style2_FocusedPlaceholderForeground">#808080</Color>

    <Style x:Key="TextBoxPlusStyle2" TargetType="{x:Type Controls:TextBoxPlus}">
        <Setter Property="Width" Value="150" />
        <Setter Property="Height" Value="45" />
        <Setter Property="Margin" Value="10" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="PlaceholderForeground" Value="{StaticResource Style2_PlaceholderForeground}" />

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Controls:TextBoxPlus}">
                    <Border x:Name="BorderControl"
                            CornerRadius="5"
                            Background="{StaticResource Style2_Background}"
                            BorderBrush="{StaticResource Style2_BorderColor}"
                            BorderThickness="2"
                            Padding="5,0,0,0">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                          VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                    </Border>
                    <ControlTemplate.Triggers>
                        <!-- Cuando IsFocusedBox es True, animamos el color del borde -->
                        <Trigger Property="IsFocusedBox" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl"
                                                        Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="{StaticResource C_Style2_FocusedBorderColor}"
                                                        Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="PlaceholderForeground.Color"
                                                        To="{StaticResource C_Style2_FocusedPlaceholderForeground}"
                                                        Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ColorAnimation Storyboard.TargetName="BorderControl"
                                                        Storyboard.TargetProperty="BorderBrush.Color"
                                                        To="{StaticResource C_Style2_BorderColor}" Duration="0:0:0.2" />
                                        <ColorAnimation Storyboard.TargetProperty="PlaceholderForeground.Color"
                                                        To="{StaticResource C_Style2_PlaceholderForeground}"
                                                        Duration="0:0:0.2" />
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>


                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>