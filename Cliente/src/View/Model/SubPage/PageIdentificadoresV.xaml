<UserControl x:Class="Cliente.src.View.Model.SubPage.PageIdentificadoresV"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Cliente.src.View.Model.SubPage"
             xmlns:converter="clr-namespace:Cliente.src.Converter"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:ex="clr-namespace:Cliente.Extencions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ex:BindingProxy x:Key="Proxy" Data="{Binding ViewModelBaseMain}"/>
        <converter:ValoresPorIdConverter x:Key="ValoresPorIdConverter"/>
    </UserControl.Resources>
    <Grid>
        <ItemsControl ItemsSource="{Binding ViewModelBaseMain.ListIdentificadors}"
              ScrollViewer.HorizontalScrollBarVisibility="Auto"
              ScrollViewer.VerticalScrollBarVisibility="Disabled"
              ScrollViewer.CanContentScroll="False">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="5" BorderThickness="1" BorderBrush="DarkGray" Width="150">
                        <Grid Margin="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="50"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="{Binding Name}" TextTrimming="CharacterEllipsis" TextAlignment="Center" TextWrapping="NoWrap"/>
                            <Separator Grid.Row="0" Margin="0,30,0,0"/>
                            <ListBox Grid.Row="1" MinHeight="50" Margin="0,10,0,0" SelectedItem="{Binding Data.EntitySelect, Source={StaticResource Proxy}}">
                                <ListBox.ItemContainerStyle>
                                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                        <Setter Property="ContextMenu">
                                            <Setter.Value>
                                                <ContextMenu>
                                                    <MenuItem Header="Editar"
                                                                  Command="{Binding Data.EditarEntityCommand, Source={StaticResource Proxy}}"
                                                                  Icon="{md:PackIcon Kind=Edit}" />
                                                    <MenuItem Header="Eliminar"
                                                                  Command="{Binding Data.EliminarEntityCommand, Source={StaticResource Proxy}}"
                                                                  Icon="{md:PackIcon Kind=Delete}" />
                                                </ContextMenu>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </ListBox.ItemContainerStyle>

                                <ListBox.ItemsSource>
                                    <MultiBinding Converter="{StaticResource ValoresPorIdConverter}">
                                        <Binding Path="Id" />
                                        <Binding Path="DataContext.ViewModelBaseMain.ValoresPorIdentificador" RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                    </MultiBinding>
                                </ListBox.ItemsSource>
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Valor}"/>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <Separator Grid.Row="2" Margin="0,-30,0,0"/>
                            <Button Grid.Row="2" Margin="10,0,10,0" Content="+ Add" VerticalAlignment="Bottom" 
                            Command="{Binding  Data.CrearEntityCommand, Source={StaticResource Proxy}}" 
                            CommandParameter="{Binding}"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
