<UserControl x:Class="Cliente.View.Items.EntitySelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:behaviors="clr-namespace:Cliente.Behaviors">

    <Grid>
        <ComboBox IsEditable="True"
                  IsTextSearchEnabled="True"
                  Style="{StaticResource MaterialDesignComboBox}"
                  md:HintAssist.Hint="{Binding HitText,
                                               RelativeSource={RelativeSource AncestorType=UserControl}}"
                  ItemsSource="{Binding View,
                                        RelativeSource={RelativeSource AncestorType=UserControl}}"
                  SelectedItem="{Binding SelectedItem,
                                         RelativeSource={RelativeSource AncestorType=UserControl},
                                         Mode=TwoWay}"
                  DisplayMemberPath="{Binding DisplayMemberPath,
                                              RelativeSource={RelativeSource AncestorType=UserControl}}" >

            <i:Interaction.Behaviors>
                <behaviors:AutoCompleteComboBoxBehavior
                    OnTextChanged="{Binding OnFilterTextChanged,
                                            RelativeSource={RelativeSource AncestorType=UserControl}}"/>
            </i:Interaction.Behaviors>

        </ComboBox>
    </Grid>
</UserControl>