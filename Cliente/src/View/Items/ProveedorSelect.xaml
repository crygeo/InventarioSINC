<UserControl x:Class="Cliente.View.Items.ProveedorSelect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" 
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400">
    <Border CornerRadius="5" BorderThickness="1" >
        <StackPanel>
            <TextBlock Text="" FontSize="15" FontWeight="Bold" />

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                <ComboBox md:HintAssist.Hint="Proveedor"
                          FontSize="15"
                          Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                          Width="300"
                          SelectedItem="{Binding Proveedor, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay}"
                          ItemsSource="{Binding ListProveedor, RelativeSource={RelativeSource AncestorType=UserControl}}"
                          Margin="0,0,5,0">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName }"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button
                ToolTip="Limpiar selección"
                Click="OnClearClick"
                VerticalAlignment="Center">
                    <md:PackIcon Kind="Delete" />
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>

