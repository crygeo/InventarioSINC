<UserControl x:Class="Cliente.View.Dialog.MessageDialogError"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="400"
             MaxWidth="400"
             Width="Auto"
             MinHeight="150">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Mensaje principal -->
        <TextBlock Text="{Binding ErrorResponse.Message, RelativeSource={RelativeSource AncestorType=UserControl}}"
                   Margin="10"
                   FontSize="16"
                   FontWeight="Bold"
                   TextWrapping="Wrap"
                   Foreground="White"/>

        <!-- Expander para detalles -->
        <Expander Grid.Row="1" Margin="10,5,10,0">
            <Expander.Style>
                <Style TargetType="Expander" BasedOn="{StaticResource MaterialDesignExpander}">
                    <Setter Property="Header" Value="Mostrar"/>
                    <Style.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter Property="Header" Value="Ocultar"/>
                        </Trigger>

                    </Style.Triggers>
                </Style>
            </Expander.Style>
            <StackPanel Margin="10,5,0,5" MouseLeftButtonDown="StackPanel_MouseLeftButtonDown">
                <TextBlock Text="Objeto relacionado:" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding ErrorResponse.ObjInteration.Name, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           Foreground="White" Margin="5,0,0,5"/>

                <TextBlock Text="Detalles del error:" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="{Binding ErrorResponse.Error, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                           TextWrapping="Wrap"
                           Foreground="White" 
                           Margin="5,0,0,5"/>

                <StackPanel.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Copiar error"
                                  Click="CopiarError_Click"/>
                    </ContextMenu>
                </StackPanel.ContextMenu>
            </StackPanel>
        </Expander>

        <!-- Botón cerrar -->
        <Button Grid.Row="2"
                Content="OK"
                Margin="0,10,0,0"
                Width="100"
                Height="30"
                HorizontalAlignment="Center"
                Command="{x:Static md:DialogHost.CloseDialogCommand}"/>

        <md:Snackbar Grid.Row="1" x:Name="SnackbarCopiado" Height="50"
                                 MessageQueue="{md:MessageQueue}" 
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"
                                 Margin="10" />
    </Grid>
</UserControl>
