<Page x:Class="InventarioSINCliente.src.View.PageUsuariosV"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventarioSINCliente.src.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageUsuariosV">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0,0,0,0" Background="{StaticResource MainView_Background_2}" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="5" Direction="270" Color="#000000" ShadowDepth="5" Opacity="0.4"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource AddUserButtonStyle}" Content="Agregar Usuario" Margin="10,0,0,0"/>
                <Button Style="{StaticResource AddProductButtonStyle}" Content="Agregar Usuario" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="1">

        </Grid>
    </Grid>
</Page>
