<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InventarioSINCliente.src.View"
        xmlns:viewModel="clr-namespace:InventarioSINCliente.src.ViewModel"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:utils="clr-namespace:Utilidades.Controls;assembly=Utilidades"
        x:Class="InventarioSINCliente.src.View.LoginV"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" d:DataContext="{d:DesignInstance Type=viewModel:LoginVM}"
        >

    <Window.DataContext>
        <viewModel:LoginVM/>
    </Window.DataContext>
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="../Img/prismatic-globe-database-xnom187ixkelq5gn.jpg"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="4*" />
        </Grid.ColumnDefinitions>

        <!-- Logo Section -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="• SINClient" FontSize="36" FontWeight="Bold" Foreground="#55DB83"
                       VerticalAlignment="Center" />
        </StackPanel>

        <!-- Form Section -->
        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="30">
            <utils:TextBoxPlus Text="{Binding Usuario, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource TextBoxPlusStyle1}" Placeholder="User" />
            <utils:PasswordBoxPlus Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PasswordBoxPlusStyle1}" Placeholder="Password"/>

            <CheckBox x:Name="CheckRemember" Content="Remember" IsChecked="{Binding RememberMe, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Foreground="White" HorizontalAlignment="Center" 
                      Margin="10" Background="#55DB83" 
                      FocusVisualStyle="{StaticResource CustomFocusStyle}" Style="{StaticResource MaterialDesignFilterChipCheckBox}"/>
            <Button Style="{DynamicResource ButtonStyle1}" Content="Iniciar sesion" Height="50"
                    Background="#5555DB83" Foreground="White"
                    BorderBrush="Transparent" FontWeight="Bold"
                    Cursor="Hand" Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Grid>
</Window>
