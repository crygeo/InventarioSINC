<Application x:Class="Cliente.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cliente" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModel="clr-namespace:Cliente.ViewModel"
             xmlns:helpers="clr-namespace:Cliente.Helpers"
             StartupUri="src/View/LoadV.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <materialDesign:BundledTheme BaseTheme="Dark" PrimaryColor="Cyan" SecondaryColor="Pink" />

                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign3.Defaults.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Utilidades;component/Styles/Style_TextBoxPlus.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Utilidades;component/Styles/Style_Button.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Utilidades;component/Styles/Style_PasswordBoxPlus.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Cliente;component/src/Styles/StylesMainView.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Cliente;component/src/Styles/StyleItems.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Cliente;component/src/Resource/DataTemplate.xaml"/>


            </ResourceDictionary.MergedDictionaries>
            <helpers:ViewModelToViewTemplateSelector x:Key="ViewModelTemplateSelector" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
